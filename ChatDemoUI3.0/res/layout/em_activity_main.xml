<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg">
    <include
        android:id="@+id/layout_title"
        layout="@layout/view_layout_title" />
    <cn.ucai.superwechat.widget.MFViewPager
        android:id="@+id/layout_viewpage"
        android:layout_below="@id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </cn.ucai.superwechat.widget.MFViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D4DCDC" />

        <cn.ucai.superwechat.widget.DMTabHost
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">
            <cn.ucai.superwechat.widget.DMTabButton
                android:id="@+id/btn_weixin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/tab_weixin"
                app:tabtext="@string/app_name"
                android:onClick="onTabClicked">
            </cn.ucai.superwechat.widget.DMTabButton>
            <cn.ucai.superwechat.widget.DMTabButton
                android:id="@+id/btn_contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/tab_contact_list"
                app:tabtext="@string/contacts"
                android:onClick="onTabClicked">
            </cn.ucai.superwechat.widget.DMTabButton>
            <cn.ucai.superwechat.widget.DMTabButton
                android:id="@+id/btn_discover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/tab_find"
                app:tabtext="@string/discover"
                android:onClick="onTabClicked">
            </cn.ucai.superwechat.widget.DMTabButton>
            <cn.ucai.superwechat.widget.DMTabButton
                android:id="@+id/btn_me"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/tab_profile"
                app:tabtext="@string/prompt"
                android:onClick="onTabClicked">

            </cn.ucai.superwechat.widget.DMTabButton>
        </cn.ucai.superwechat.widget.DMTabHost>
    </LinearLayout>


</RelativeLayout>